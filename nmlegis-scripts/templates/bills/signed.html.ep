% layout 'default';
% title  'Signed Bills';

% if (! keys %$by_md) {
<h1>No bills have been signed yet</h1>
%     return $_O;
% }
<h1>Signed Bills</h1>

% for my $md (reverse sort keys %$by_md) {
<hr/>
<h2><%= $fulldate->{$md} %></h2>
<table class="bills">
%     my $bills = $by_md->{$md};
%     for my $b (@$bills) {
%= include 'bills/_billrow', b => $b, columns => [ 'watch_button', 'id', 'title', 'sponsors', 'status' ]
%     }
</table>
% }
